{
  "name": "webpack-boilerplate",
  "version": "1.0.1",
  "description": "Webpack boilerplate",
  "main": "src/js/app.js",
  "scripts": {
    "lint": "eslint -c .eslintrc src/**",
    "lint:fix": "eslint -c .eslintrc --fix src/**",
    "start": "webpack-dev-server",
    "assets": "node ./tasks/watch-asset.js",
    "shader": "node ./tasks/shader-watcher.js",
    "shader:test": "node ./tasks/test-shader.js",
    "uniforms": "node ./tasks/uniforms-checker.js",
    "dev": "NODE_ENV=development webpack-dev-server --hot --inline --host 0.0.0.0 --colors --error-details --content-base dist --port 8081 & node ./tasks/watch-asset.js & node ./tasks/shader-watcher.js",
    "build": "NODE_ENV=production webpack --progress --colors --error-details",
    "test:ci": "node ./tasks/ci.js"
  },
  "repository": {},
  "keywords": [],
  "author": "Yi-Wen Lin",
  "license": "ISC",
  "devDependencies": {},
  "dependencies": {
    "fs-extra": "^4.0.1"
  }
}
